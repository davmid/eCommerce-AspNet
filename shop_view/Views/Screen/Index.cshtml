@model List<shop_view.Models.Screen>

<a asp-controller="Home" asp-action="Index">Home</a>

<h2>Screen List</h2>

<p><a asp-controller="Screen" asp-action="Create">Create New Screen</a></p>

<table class="table">
    <thead>
        <tr>
            <th>Screen ID</th>
            <th>Brand</th>
            <th>Category</th>
            <th>Price</th>
            <th>Description</th>
            <th>Inches</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var screen in Model)
        {
            <tr>
                <td>@screen.ScreenID</td>
                <td>@screen.Brand</td>
                <td>@screen.ScreenCategory</td>
                <td>@screen.Price</td>
                <td>@screen.Description</td>
                <td>@screen.Inches</td>
                <td>
                    <a asp-controller="Screen" asp-action="Edit" asp-route-id="@screen.ScreenID">Edit</a> |
                    <a asp-controller="Screen" asp-action="Delete" asp-route-id="@screen.ScreenID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>