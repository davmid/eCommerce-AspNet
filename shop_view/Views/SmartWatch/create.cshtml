@model shop_view.Models.SmartWatch

<h2>Create SmartWatch</h2>

<form asp-controller="SmartWatch" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Brand">Brand</label>
        <input asp-for="Brand" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SWCategory">SWCategory</label>
        <select asp-for="SWCategory" asp-items="Html.GetEnumSelectList<shop_view.enums.Category>()" class="form-control">
            <option value="">Select Category</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class "form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

<a asp-controller="SmartWatch" asp-action="Index">Back to List</a>
