@model shop_view.Models.Phone

<h2>Create Phone</h2>

<form asp-controller="Phone" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Brand"></label>
        <input asp-for="Brand" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneCategory"></label>
        <select asp-for="PhoneCategory" asp-items="Html.GetEnumSelectList<shop_view.enums.Category>()" class="form-control">
            <option value="">Select Category</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
<a asp-controller="Screen" asp-action="Index">Back to List</a>