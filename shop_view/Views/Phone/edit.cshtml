@model shop_view.Models.Phone

<h2>Edit Phone</h2>

<form asp-controller="Phone" asp-action="Edit" method="post">
    <input asp-for="PhoneID" type="hidden" />
    <div class="form-group">
        <label asp-for="Brand"></label>
        <input asp-for="Brand" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneCategory"></label>
        <select asp-for="PhoneCategory" asp-items="Html.GetEnumSelectList<shop_view.enums.Category>()" class="form-control">
            <option value="">Select Category</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
